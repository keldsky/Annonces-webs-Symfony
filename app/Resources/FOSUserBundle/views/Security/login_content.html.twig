{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form  action="{{ path("fos_user_security_check") }}" method="post" >
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-groups">
        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
    </div>
    <div class="form-groups">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input class="form-control border-input" type="password" id="password" name="_password" required="required"/>
    </div>


    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

    <input type="hidden" name="go_to" value="{{ path('dashboard') }}" />
    <input type="hidden" name="back_to" value="{{ path('forgot_password') }}" />


    <p>
    <div class="text-center">
        <button type="submit" class="btn btn-info"   id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">Se connecter </button>
    </div>
    </p>

</form>
